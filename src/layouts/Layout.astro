---
import '../styles/global.css';

interface Props {
  title: string;
  lang?: string;
}

const { title, lang = 'fr' } = Astro.props;
---

<!DOCTYPE html>
<html lang={lang} class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    
    <!-- Primary Meta Tags -->
    <title>{title}</title>
    <meta name="title" content={title}>
    <meta name="description" content="Fido Plus - Solutions digitales sur mesure pour votre entreprise. Marketing digital, développement web et gestion de marque à Marrakech.">
    
    <!-- Favicon -->
    <link rel="icon" type="image/png" href="/images/favico.png" />
    <link rel="apple-touch-icon" href="/images/favico.png">
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website">
    <meta property="og:url" content="https://fidoplus.ma/">
    <meta property="og:title" content={title}>
    <meta property="og:description" content="Fido Plus - Solutions digitales sur mesure pour votre entreprise. Marketing digital, développement web et gestion de marque à Marrakech.">
    <meta property="og:image" content="/images/Fido_Plus_final.png">
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image">
    <meta property="twitter:url" content="https://fidoplus.ma/">
    <meta property="twitter:title" content={title}>
    <meta property="twitter:description" content="Fido Plus - Solutions digitales sur mesure pour votre entreprise. Marketing digital, développement web et gestion de marque à Marrakech.">
    <meta property="twitter:image" content="/images/Fido_Plus_final.png">
    
    <!-- Additional Meta -->
    <meta name="generator" content={Astro.generator} />
    <meta name="theme-color" content="#000000">
    <meta name="robots" content="index, follow">
    <meta name="language" content={lang}>
    <link rel="canonical" href="https://fidoplus.ma/">
    <meta name="author" content="Fido Plus">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;500;600;700&display=swap" rel="stylesheet">
  </head>
  <body class="antialiased">
    <slot />
    <script src="https://unpkg.com/@splinetool/runtime@0.9.493/build/runtime.js"></script>
  </body>
</html>

<style is:global>
  :root {
    --accent: 255, 51, 102;
    --accent-light: 255, 102, 153;
  }

  html {
    scroll-behavior: smooth;
  }

  body {
    margin: 0;
    font-family: 'Inter', sans-serif;
    overflow-x: hidden;
  }

  .dir-rtl {
    direction: rtl;
  }
</style>
