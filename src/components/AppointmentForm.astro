<div class="bg-white rounded-xl shadow-lg overflow-hidden">
  <!-- Étape 1 : Calendrier -->
  <div id="step1" class="p-8 border-b border-gray-100">
    <h3 class="text-2xl font-semibold mb-6 text-gray-900">Sélectionnez une Date</h3>
    <div class="calendar-container">
      <div class="flex justify-between items-center mb-6">
        <button id="prevMonth" class="text-gray-900 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 19l-7-7 7-7" />
          </svg>
        </button>
        <h4 id="currentMonth" class="text-xl font-medium text-gray-900"></h4>
        <button id="nextMonth" class="text-gray-900 hover:text-gray-600 transition-colors">
          <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7" />
          </svg>
        </button>
      </div>
      <div class="grid grid-cols-7 gap-2 mb-4">
        <div class="text-center text-sm font-medium text-gray-600">Lun</div>
        <div class="text-center text-sm font-medium text-gray-600">Mar</div>
        <div class="text-center text-sm font-medium text-gray-600">Mer</div>
        <div class="text-center text-sm font-medium text-gray-600">Jeu</div>
        <div class="text-center text-sm font-medium text-gray-600">Ven</div>
        <div class="text-center text-sm font-medium text-gray-600">Sam</div>
        <div class="text-center text-sm font-medium text-gray-600">Dim</div>
      </div>
      <div id="calendarDays" class="grid grid-cols-7 gap-2"></div>
      <div id="timeSlots" class="mt-6 grid grid-cols-2 sm:grid-cols-4 gap-2"></div>
      <button id="nextStep" class="w-full mt-6 bg-primary text-white py-2 rounded-lg hover:bg-primary/90 transition-colors hidden">
        Continuer
      </button>
    </div>
  </div>

  <!-- Étape 2 : Formulaire -->
  <div id="step2" class="p-8 border-b border-gray-100 hidden">
    <div class="flex justify-between items-center mb-6">
      <h3 class="text-2xl font-semibold text-gray-900">Vos Informations</h3>
      <button id="backToCalendar" class="text-gray-900 hover:text-gray-600 transition-colors">
        Retour au calendrier
      </button>
    </div>
    <form id="appointmentForm" class="space-y-6">
      <div class="selected-datetime text-lg font-medium text-gray-900 mb-6"></div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <label for="firstName" class="block text-sm font-medium text-gray-700 mb-1">Prénom</label>
          <input type="text" id="firstName" name="firstName" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
        <div>
          <label for="lastName" class="block text-sm font-medium text-gray-700 mb-1">Nom</label>
          <input type="text" id="lastName" name="lastName" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"
        </div>
        <div>
          <label for="email" class="block text-sm font-medium text-gray-700 mb-1">Email</label>
          <input type="email" id="email" name="email" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        <div>
          <label for="phone" class="block text-sm font-medium text-gray-700 mb-1">Téléphone</label>
          <input type="tel" id="phone" name="phone" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
        </div>
        <div>
          <label for="projectType" class="block text-sm font-medium text-gray-700 mb-1">Service souhaité</label>
          <select id="projectType" name="projectType" required
            class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent">
            <option value="">Sélectionnez un service</option>
            <option value="creation_entreprise">Création d'entreprise</option>
            <option value="comptabilite">Comptabilité</option>
            <option value="domiciliation">Domiciliation</option>
            <option value="autre">Autre</option>
          </select>
        </div>
      </div>
      
      <div>
        <label for="message" class="block text-sm font-medium text-gray-700 mb-1">Message (optionnel)</label>
        <textarea id="message" name="message" rows="4"
          class="w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-primary focus:border-transparent"></textarea>
      </div>
      
      <button type="submit" class="w-full bg-primary text-white py-3 rounded-lg hover:bg-primary/90 transition-colors">
        Confirmer le rendez-vous
      </button>
    </form>
  </div>
</div>

